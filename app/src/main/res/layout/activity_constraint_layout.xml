<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:minHeight="0dp"
    tools:context=".ConstraintLayoutActivity">

    <Button
        android:id="@+id/bt_red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="344dp"
        android:background="@color/colorRed"
        android:text="Red"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_orange"
        app:layout_constraintEnd_toStartOf="@+id/bt_orange"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_orange"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_orange"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:background="@color/colorOrange"
        android:text="Orange"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_yellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="336dp"
        android:background="@color/colorYellow"
        android:text="Yellow"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/bt_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_orange"
        app:layout_constraintTop_toTopOf="@+id/bt_orange" />

    <Button
        android:id="@+id/bt_green"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginEnd="72dp"
        android:background="@color/colorGreen"
        android:text="Green"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_blue"
        app:layout_constraintEnd_toStartOf="@+id/bt_blue" />
    />

    <Button
        android:id="@+id/bt_blue"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="182dp"
        android:layout_marginBottom="139dp"
        android:background="@color/colorBlue"
        android:text="Blue"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/bt_violet"
        app:layout_constraintStart_toStartOf="@+id/bt_orange"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_indigo"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="84dp"
        android:background="@color/colorIndigo"
        android:text="Indigo"
        android:textSize="25sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_blue"
        app:layout_constraintStart_toEndOf="@+id/bt_blue" />

    <Button
        android:id="@+id/bt_violet"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="300dp"
        android:background="@color/colorViolet"
        android:text="Violet"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_yellow" />

</android.support.constraint.ConstraintLayout>